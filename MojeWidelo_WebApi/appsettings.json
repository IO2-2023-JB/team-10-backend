{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseSettings": {
    "DatabaseName": "mojeWideloDb",
    "ConnectionString": "mongodb://localhost:27017",
    "UsersCollectionName": "users",
    "VideoCollectionName": "videoMetadata",
    "ReactionCollectionName": "reactions",
    "CommentCollectionName": "comments",
    "SubscriptionCollectionName": "subscriptions",
    "PlaylistCollectionName": "playlists"
  },
  "Variables": {
    "VideoStorageLocation": "../VideoStorage",
    "FrontendPath": "../Frontend",
    "FFMpegConversionParams": [ "-vf", "setsar=1:1", "-map_metadata", "-1", "-c:v", "libx264", "-preset", "faster", "-crf", "30", "-c:a", "aac", "-q:a", "1" ]
  }
}
